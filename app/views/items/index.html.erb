<section class="container-fluid p-3">
  <% unless @items.empty? %>
    <% @items.each do |item| %>
      <div class="d-flex flex-wrap align-items-center border border-info my-3 py-2 px-1">
        <% book = Book.find(item.book_id) %>
        <div class="px-2 font-weight-bold"><%= book.title %></div>
        <div class="px-2">Sold by: <%= book.seller.name %></div>
        <div class="ml-auto px-2"><%= number_to_currency(book.price) %></div>
        <%= link_to 'Cancel', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-muted px-2' %>
      </div>
    <% end %>
    <div class="d-flex flex-wrap justify-content-end align-items-center my-4">
      <h5 class="mr-auto">Wallet: <%= number_to_currency(current_buyer.wallet) %></h5>
      <h5 class="px-3 my-0">Total: <%= number_to_currency(@total) %></h5>
      <%= link_to 'Purchase', items_purchase_path, method: :post, class: 'btn btn-success', rol: 'button' %>
    </div>
    <%= link_to 'Keep buying', root_path, class: "btn btn-info" %>
  <% else %>
    <h1 class="text-center my-5">Go to buy a ton of <%= link_to 'books!', root_path %></h1>
  <% end %>
</section>
