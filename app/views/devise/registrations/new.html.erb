<section class="container-fluid p-4">
  <h2>Sign up <%= resource_name.to_s.humanize %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), rol: 'form') do |f| %>
    <div class="text-danger"><%= f.error_notification %></div>

    <div class="form-group">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  label_html: { class: 'font-weight-bold' },
                  input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <% if resource_name == :seller %>
        <%= f.input :phone,
                    required: true,
                    label_html: { class: 'font-weight-bold' },
                    input_html: { class: 'form-control' } %>
      <% end %>
      <% if resource_name == :buyer %>
        <%= f.input :address,
                    required: true,
                    label_html: { class: 'font-weight-bold' },
                    input_html: { class: 'form-control' } %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.input :email,
                  required: true,
                  label_html: { class: 'font-weight-bold' },
                  input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  label_html: { class: 'font-weight-bold' },
                  input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation,
                  required: true,
                  label_html: { class: 'font-weight-bold' },
                  input_html: { class: 'form-control' } %>
    </div>
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
